#Programa que dada una lista de número, identifica y muetras los números pares e impares 

#Crear mis listas
pares = []
impares = []

def validar_lista_numeros(mensaje:str):
    while True:
        #Pongo la lista acá, asi cada vez que haya un error de reiniciará y no se acumularán.
        lista_buena = []
        try:
            #Separo los números en una lista de string
            rango_numeros = input(mensaje)
            lista = rango_numeros.split()
            #Mediante un bucle transformaré cada string de la lista split a int() y lo pasaré a una lista buena. 
            for i in lista:
                lista_buena.append(int(i))
            return lista_buena
        except ValueError:
            print("Error, debes ingresar un número entero, no letras.")
            continue

#Llamar a la función con el mensaje que quiero
lista_buena = validar_lista_numeros("Ingrese números separados por un espacio para comprobar si es par o impar: ")

#Mediante el residuo comprobaré si el número es par o impar
for i in lista_buena:
    comprobar = i%2

    if comprobar == 0:
        pares.append(i)
    else:
        impares.append(i)


print(f"Números pares: {pares}")
print(f"Números impares: {impares}")
