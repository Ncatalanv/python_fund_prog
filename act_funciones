#Programa que dada una lista de número, identifica y muetras los números pares e impares 

def validar_lista_numeros(validar):
    for i in validar:
        



#Crear mis listas
pares = []
impares = []
lista_buena = []

rango_numeros = input("Ingrese una lista de números separados por un espacio: ")

#Separo los números en una lista de string
lista = rango_numeros.split()

print(validar_lista_numeros(lista))

#Mediante un bucle transformaré cada string de la lista split a int() y lo pasaré a una lista buena. 
for i in lista:
    lista_buena.append(int(i))
    print(lista_buena)

#Mediante el residuo comprobaré si el número es par o impar
for i in lista_buena:
    comprobar = i%2

    if comprobar == 0:
        print("par")
        pares.append(i)
    else:
        print("impar")
        impares.append(i)

print(f"Hay {len(pares)} números pares.")
print(f"Hay {len(impares)} números impares.")







